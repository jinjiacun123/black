<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 是未认证 -->
    <RelativeLayout 
        android:background="#189A30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp">

        <RelativeLayout
            android:id="@+id/rel_qualifiedterrace1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/iv_qualifiedterrace1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/praise_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_qualifiedterrace1"
                    android:layout_centerHorizontal="true"
                    android:text="公司资料已通过合规认证"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/small_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" 
                >                

                    <TextView
                        android:id="@+id/tv_praise_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:text="xxxxx"
                        android:textColor="#ffff00" />
                       
            <ImageView
                android:layout_below="@+id/tv_praise_number"
                android:id="@+id/iv_praise"
                android:layout_width="105dp"
                android:layout_height="30dp"                          
                android:src="@drawable/praise_green" />
            </RelativeLayout>     
        </RelativeLayout>

      	<ImageView 
      	    android:visibility="gone"
      	    android:layout_below="@+id/rel_qualifiedterrace1"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:id="@+id/iv_qualifiedterrace2"
      	    android:src="@drawable/qualifiedterrace3"/>
    </RelativeLayout>

