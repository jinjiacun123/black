                     android:id="@+id/tv_qualifiedterrace_terracename2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/tv_qualifiedterrace_terracename"
                     android:textColor="#333"/>
             </RelativeLayout>
