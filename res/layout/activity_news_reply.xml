<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f4"
    tools:context="${packageName}.${activityClass}" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    <LinearLayout 
	  	    android:layout_width="match_parent"
	  	    android:layout_height="0dp"
	  	    android:layout_weight="0.9">
	  	     <com.huanrong.searchdarkvip.view.stone.customview.XListView 
		        android:layout_width="match_parent"
		        android:layout_height="fill_parent"
		        android:id="@+id/lv_news_reply"
		        android:divider="#fff"
		        />
	  	</LinearLayout>
	   <RelativeLayout 
	  	    android:layout_width="match_parent"
	  	    android:layout_height="0dp"
	  	    android:layout_weight="0.1"
	  	    android:background="#fff">
	  	     <ImageView 
	  	         android:id="@+id/iv_news_reply_share"
	  	         android:layout_width="wrap_content"
	  	         android:layout_height="wrap_content"
	  	         android:layout_marginLeft="5dp"
	  	         android:layout_marginTop="5dp"
	  	         android:layout_centerVertical="true"
	  	         android:layout_alignParentRight="true"
	  	         android:layout_marginBottom="5dp"
	  	         android:layout_marginRight="10dp"
	  	         android:src="@drawable/share1"/>
	  	     <ImageView 
	  	         android:id="@+id/iv_news_reply_speak"
	  	         android:layout_width="fill_parent"
	  	         android:layout_height="wrap_content"
	  	         android:layout_toLeftOf="@+id/iv_news_reply_share"
	  	         android:layout_marginLeft="10dp"
	  	         android:layout_marginRight="10dp"
	  	         android:layout_centerVertical="true"
	  	         android:layout_alignParentLeft="true"
	  	         android:src="@drawable/speak"/>
	  	</RelativeLayout>
  	</LinearLayout>
  	<!-- 评论框 -->
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="bottom"
	    android:background="#4c000000"
	    android:id="@+id/fl_news_reply_fl1"
	    android:visibility="gone">
	   <RelativeLayout 
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:background="#4c000000"
	       >
	  	   <RelativeLayout 
	           android:id="@+id/rel_news_reply_rl2"
	           android:layout_alignParentBottom="true"
	           android:layout_width="match_parent"
	           android:layout_height="140dp"
	           android:background="#fff">
	  	       <LinearLayout 
	  	           android:layout_marginLeft="10dp"
	  	           android:layout_marginRight="10dp"
	  	           android:layout_marginTop="3dp"
	  	           android:layout_width="match_parent"
	  	           android:layout_height="60dp"
	  	           android:id="@+id/lin_news_reply_lin1"
	  	           android:background="@drawable/noattestation_comment_select"
	  	           >
	  	           <EditText 
	  	               android:id="@+id/et_news_reply_comment"
	  	               android:layout_width="match_parent"
	  	               android:layout_height="wrap_content"
	  	               android:background="@null"
	  	               />
	  	       </LinearLayout>
	  	       <RelativeLayout 
	  	           android:id="@+id/lin_news_reply_lin2"
	  	           android:layout_marginBottom="10dp"
	  	           android:layout_marginLeft="10dp"
	  	           android:layout_marginRight="10dp"
	  	           android:layout_marginTop="5dp"
	  	           android:layout_width="match_parent"
	  	           android:layout_height="fill_parent"
	  	           android:orientation="horizontal"
	  	           android:layout_below="@+id/lin_news_reply_lin1"
	  	           >
	  	           <ImageView 
	  	               android:layout_centerVertical="true"
	  	               android:id="@+id/iv_news_reply_comment_icon1"
	  	               android:layout_width="wrap_content"
	  	               android:layout_height="wrap_content"
	  	               android:src="@drawable/expression"
	  	               />
	  	           <ImageView 
	  	               android:layout_centerVertical="true"
	  	               android:layout_marginLeft="15dp"
	  	               android:id="@+id/iv_news_reply_comment_icon2"
	  	               android:layout_width="wrap_content"
	  	               android:layout_height="wrap_content"
	  	               android:layout_toRightOf="@+id/iv_news_reply_comment_icon1"
	  	               android:src="@drawable/noattesxtation_1"/>
	  	           <ImageView 
	  	               android:layout_alignParentRight="true"
	  	               android:layout_marginRight="10dp"
	  	               android:layout_centerVertical="true"
	  	               android:layout_width="80dp"
	  	               android:layout_height="35dp"
	  	               android:id="@+id/iv_news_reply_comments"
	  	               android:src="@drawable/comments"/>
	  	       </RelativeLayout>
	  	   </RelativeLayout>
	       <RelativeLayout 
	           android:id="@+id/rel_news_reply_rl1"
	           android:layout_width="match_parent"
	           android:layout_height="fill_parent"
	           android:layout_above="@+id/rel_news_reply_rl2"
	           >
	       </RelativeLayout>
	   </RelativeLayout>
	</FrameLayout>	
   
  	<!-- 加载框 -->
	<FrameLayout 
       android:id="@+id/fl_noattestation"
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:background="#999999"
       >
     <ProgressBar 
       android:id="@+id/pb_search_flsh"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="150dp"
       style="@android:attr/progressBarStyleLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       />  
       
       <TextView 
           android:id="@+id/tv_jiazai"
           android:textColor="#ffffff"
           android:layout_marginTop="200dp"
           android:textSize="15sp"
           android:text="正在加载数据"
           android:layout_gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
   </FrameLayout>  	
</FrameLayout>

