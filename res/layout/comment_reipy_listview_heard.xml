<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <com.huanrong.searchdarkvip.view.stone.customview.CircularImage
        android:id="@+id/iv_comment_header_user_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar" />

    <RelativeLayout
        android:id="@+id/rl_build"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_below="@+id/iv_comment_header_user_icon"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/build_icon"
        android:gravity="center_vertical|center_horizontal" >

        <TextView
            android:id="@+id/tv_89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/micro_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iv_comment_header_user_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_comment_header_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#3dafea" />

        <TextView
            android:id="@+id/tv_comment_header_user_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/lin_comment_header_listview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_comment_header_user_icon1"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/iv_comment_header_user_icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <ImageView
                android:id="@+id/iv_comment_header_user_icon3"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/iv_comment_header_user_icon4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/order6" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/tv_891"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_comment_header_user_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-58-12"
                android:textColor="#999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_comment_header_listview_crown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_90"
                android:text="顶（235）"
                android:textColor="#3dafea"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_90"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/tv_comment_listview_crown"
                android:background="#3dafea" />

            <TextView
                android:id="@+id/tv_comment_listview_crown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="回复"
                android:textColor="#3dafea"
               android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>