<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f4" >

    <include
        android:id="@+id/ic_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ic_title"
        android:fillViewport="true" >

        <!-- 标题 -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_contnet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="口碑是全国最大的黑平台、黑公司查询曝光网站，目前主要涉及外汇、大宗商品（贵金属、石油）等行业。"
                android:textColor="#000000"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                android:id="@+id/tv_contnet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contnet1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="口碑以精干团队，严格把关，实施宽进严出的审核标准，将公司、平台划分为非法、未认证、合规三种类型，真正做到为投资者甄选安全可靠的交易平台。"
                android:textColor="#000000"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                android:id="@+id/tv_contnet3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contnet2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="口碑更希望携手每一位投资人共同揭开交易市场的层层黑幕，营造国内绿色透明的交易环境。"
                android:textColor="#000000"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contnet3"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:text="口碑——让投资更放心！"
                android:textColor="#3399FF"
                android:textSize="@dimen/large_text_size" />
            <!--
                 <WebView
                android:id="@+id/wv_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />            -->

            <LinearLayout
                android:layout_marginTop="-50dp"
                android:id="@+id/ll_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/mine_us" />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/mine_us_right" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/ll_content" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>