<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f1f2f3">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/news_reply_select_back"
        >"
	   	<TextView 
	   	    android:layout_marginTop="10dp"
	        android:id="@+id/tv_newsreply_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"/>
	    <RelativeLayout
	        android:layout_below="@+id/tv_newsreply_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#f1f2f3"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="10dp"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/tv_newsreply_addtime"
	            android:textSize="12sp"
	            android:textColor="#999"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/tv_newsreply_assist_num"
	            android:layout_alignParentRight="true"
	            android:textSize="12sp"
	            android:textColor="#999" />
	        <ImageView 
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/iv_newsreply_icon"
	            android:layout_marginRight="2dp"
	            android:layout_toLeftOf="@+id/tv_newsreply_assist_num"
	            android:src="@drawable/newsreply"/>
	    </RelativeLayout>
    </RelativeLayout>
  

</LinearLayout>
