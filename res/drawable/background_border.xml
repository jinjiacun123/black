<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框颜色"#E8E8E8" -->
    <item>
        <shape>
            <solid android:color="#E8E8E8" />
        </shape>
    </item>
    <!-- 背景颜色 -->
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        >
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>